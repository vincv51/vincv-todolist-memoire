<!DOCTYPE html>

<html>
    <head>
        <title>Ma todolist</title>
        <style>
            #mon_bloc{
            	min-width:400px;
                width:50%;
                margin-left: auto;
                margin-right: auto;
                text-align: center;
                background-color: LightGray;
                border-radius: 10px;
                }
            body{
            	background-color: gray;
            	background-image: url(blob:https://console.bluemix.net/ed07723d-a447-47d0-8248-f60fdfd9eeba);
                background-position:center top;
                }
            a {text-decoration: none; color: black;}
        </style>
    </head>

    <body>
        <div id="mon_bloc">
        <h1>Ma todolist with Devops</h1>        
        <ul>
        <% todolist.forEach(function(todoitem) { %>
            <li><a href="javascript:if(confirm('Voulez-vous vraiment supprimer cette tâche ?' )) document.location.href='/todo/supprimer/<%= todoitem.doc._id %>'">✘</a> <%= todoitem.doc.todo %></li>
        <% }); %>
        </ul>
        <form action="/todo/ajouter/" method="post">
            <p>
                <label for="newtodo">Que dois-je faire ?</label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit"  value=" Enregistrer " />
            </p>
        </form>
        </div>
    </body>
</html>